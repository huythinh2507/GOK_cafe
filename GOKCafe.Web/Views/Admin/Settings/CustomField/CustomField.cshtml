        <div class="p-6 border-b border-gray-200 sticky top-0 bg-white">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-xl font-bold text-gray-800">Custom fields</h2>
                    <p class="text-gray-600 text-sm mt-1">Customize inFlow to your specific needs with custom fields</p>
                </div>
                <button onclick="closeCustomFieldModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
        </div>

        <!-- Modal Body -->
        <div class="p-6 space-y-3">
            <!-- Sales Order -->
