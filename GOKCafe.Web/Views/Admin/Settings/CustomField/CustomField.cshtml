                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div> *@

            <!-- Purchase Order -->
            @* <div class="entity-row flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer"
                 onclick="openEntityModal('Purchase order', 4, [{name: 'PO Number', type: 'Text'}, {name: 'Approval Status', type: 'Select'}, {name: 'Budget Code', type: 'Text'}, {name: 'Department', type: 'Select'}])">
                <div class="flex-1">
                    <h3 class="font-semibold text-gray-800">Purchase order</h3>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-600 font-medium">4 fields</span>
                    <button class="entity-btn w-10 h-10 rounded-full bg-gray-700 hover:bg-gray-800 text-white flex items-center justify-center transition-colors">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div> *@

            <!-- Product -->
            <div class="entity-row flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:bg-gray-50 transition-colors cursor-pointer"
                 onclick="openEntityModal('Product', 10, [{name: 'Roast Level', type: 'Text'}, {name: 'Origin', type: 'Text'}, {name: 'Flavor Notes', type: 'Textarea'}, {name: 'Organic', type: 'Checkbox'}, {name: 'SKU', type: 'Text'}, {name: 'Grind Size', type: 'Select'}, {name: 'Notes', type: 'Textarea'}, {name: 'Featured', type: 'Checkbox'}, {name: 'Region', type: 'Text'}, {name: 'Altitude', type: 'Text'}])">
                <div class="flex-1">
                    <h3 class="font-semibold text-gray-800">Product</h3>
                </div>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-600 font-medium">10 fields</span>
                    <button class="entity-btn w-10 h-10 rounded-full bg-gray-700 hover:bg-gray-800 text-white flex items-center justify-center transition-colors">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </div>

         
        </div>

        <!-- Modal Footer -->
        <div class="p-6 border-t border-gray-200 flex justify-end space-x-3 sticky bottom-0 bg-white">
            <button onclick="closeCustomFieldModal()" class="px-6 py-2 border border-gray-400 text-gray-700 rounded-lg hover:bg-gray-50 font-medium">
                Cancel
            </button>
            <button class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-blue-500 font-semibold">
                Save
            </button>
        </div>
    </div>
</div>

<!-- Product Custom Fields Modal Component -->
@await Html.PartialAsync("~/Views/Admin/Settings/CustomField/ModalProductFields.cshtml")

<style>
    .admin-settings {
        max-width: 1200px;
        margin: 0 auto;
    }

    .modal.hidden {
        display: none;
    }

    .modal {
        animation: 0.2s ease-in;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>

<script>
    function openCustomFieldModal(event) {
        event.preventDefault();
        document.getElementById('customFieldModal').classList.remove('hidden');
    }

    function closeCustomFieldModal() {
        document.getElementById('customFieldModal').classList.add('hidden');
    }

    // Close modals when clicking outside
    document.getElementById('customFieldModal').addEventListener('click', (e) => {
        if (e.target.id === 'customFieldModal') {
            closeCustomFieldModal();
        }
    });
</script>
