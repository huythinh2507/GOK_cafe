<!-- Product Custom Fields Modal -->
<div id="entityModal" class="modal hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="modal-content bg-white rounded-lg shadow-lg w-full max-w-2xl max-h-[80vh] overflow-y-auto">
        <!-- Entity Modal Header (with Back button) -->
        <div class="p-6 border-b border-gray-200 sticky top-0 bg-white">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <button id="backToListBtn" onclick="backToList()" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-arrow-left text-2xl"></i>
                    </button>
                    <h2 id="entityTitle" class="text-xl font-bold text-gray-800">Product</h2>
                </div>
                <button onclick="closeEntityModal()" class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
        </div>

        <!-- Entity Modal Body -->
        <div id="entityBody" class="p-6 space-y-4">
            <!-- Fields will be rendered here by JavaScript -->
        </div>

        <!-- Entity Modal Footer -->
        <div class="p-6 border-t border-gray-200 flex justify-between sticky bottom-0 bg-white">
            <button onclick="addNewField()" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 font-medium">
                + Add Field
            </button>
            <div class="flex space-x-3">
                <button onclick="closeEntityModal()" class="px-6 py-2 border border-gray-400 text-gray-700 rounded-lg hover:bg-gray-50 font-medium">
                    Cancel
                </button>
                <button onclick="saveAllFields()" class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-blue-600 font-semibold">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Field Template (hidden, cloned by JavaScript) -->
<template id="fieldTemplate">
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-2 field-card">
        <div class="flex flex-row items-center justify-between">
            <div class="flex flex-row items-start justify-between gap-4">
                <!-- Field Header with Delete -->
                <button type="button" class="text-gray-700 hover:text-gray-800 delete-field-btn">
                    <i class="fas fa-times"></i>
                </button>
                <div class="flex items-center it justify-between mb-4">
                    <h3 class="text-sm font-bold text-gray-700 field-number">Field 1</h3>
                </div>
            </div>
            
            <!-- Field Name -->
            <div class="mb-4">
                <input type="text" placeholder="e.g., Brand" class="field-name-input w-96 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-800 font-medium">
            </div>
        </div>

        
            <!-- Type Section -->
            <div class="flex flex-row items-center justify-between">
                <label class="block text-sm font-bold ml-8 text-gray-700 mb-2">Type</label>
                <select class="field-type-select w-96  px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white text-gray-700">
                    <option value="Text field">Text field</option>
                    <option value="Drop-down">Drop-down</option>
                    <option value="Date field">Date field</option>
                    <option value="Checkbox">Checkbox</option>
                    <option value="Textarea">Textarea</option>
                </select>
            </div>

            <!-- Dropdown Options (conditionally shown) -->
            <div class="dropdown-options-section mt-4 pt-4 border-t border-gray-300 hidden">
                <button type="button" class="flex items-center text-blue-600 hover:text-blue-800 font-medium text-sm mb-3 toggle-options-btn">
                    <i class="fas fa-chevron-down mr-2"></i>
                    Manage drop-down options
                </button>
                <div class="options-container hidden space-y-2 bg-white p-3 rounded border border-gray-200">
                    <!-- Options will be added here -->
                </div>
                <button type="button" class="text-blue-600 hover:text-blue-800 text-sm font-medium mt-2 flex items-center add-option-btn">
                    <i class="fas fa-plus mr-1"></i>
                    Add option
                </button>
            </div>
       
    </div>
</template>

<!-- Option Template -->
<template id="optionTemplate">
    <div class="flex items-center space-x-2 option-item">
        <input type="text" placeholder="Option value" class="option-input flex-1 px-3 py-2 border border-gray-300 rounded text-sm bg-white">
        <button type="button" class="text-red-600 hover:text-red-800 delete-option-btn">
            <i class="fas fa-trash"></i>
        </button>
    </div>
</template>

<script>
    let currentFields = [];

    function openEntityModal(entityName, fieldCount, customFields) {
        document.getElementById('customFieldModal').classList.add('hidden');
        document.getElementById('entityTitle').textContent = entityName + ' custom fields';
        
        // Store current fields
        currentFields = JSON.parse(JSON.stringify(customFields || []));
        
        renderFieldsList();
        document.getElementById('entityModal').classList.remove('hidden');
    }

    function renderFieldsList() {
        const entityBody = document.getElementById('entityBody');
        entityBody.innerHTML = '';
        
        if (!currentFields || currentFields.length === 0) {
            entityBody.innerHTML = `
                <div class="text-center py-8">
                    <p class="text-gray-600">No custom fields yet. Click "Add Field" to create one.</p>
                </div>
            `;
            return;
        }

        currentFields.forEach((field, index) => {
            const fieldCard = document.getElementById('fieldTemplate').content.cloneNode(true);
            
            // Set field number
            fieldCard.querySelector('.field-number').textContent = `Field ${index + 1}`;
            
            // Set field name
            const nameInput = fieldCard.querySelector('.field-name-input');
            nameInput.value = field.label || '';
            nameInput.addEventListener('change', (e) => {
                currentFields[index].label = e.target.value;
            });
            
            // Set field type
            const typeSelect = fieldCard.querySelector('.field-type-select');
            typeSelect.value = field.type || 'Text field';
            typeSelect.addEventListener('change', (e) => {
                handleTypeChange(index, e.target.value);
            });
            
            // Handle dropdown options section visibility
            const dropdownSection = fieldCard.querySelector('.dropdown-options-section');
            const optionsContainer = fieldCard.querySelector('.options-container');
            const toggleBtn = fieldCard.querySelector('.toggle-options-btn');
            const addOptionBtn = fieldCard.querySelector('.add-option-btn');
            
            if (field.type === 'Drop-down') {
                dropdownSection.classList.remove('hidden');
                renderOptions(field, index, optionsContainer);
                
                toggleBtn.addEventListener('click', () => {
                    optionsContainer.classList.toggle('hidden');
                });
                
                addOptionBtn.addEventListener('click', () => {
                    if (!field.options) field.options = [];
                    field.options.push('New option');
                    renderOptions(field, index, optionsContainer);
                });
            }
            
            // Delete field button
            const deleteBtn = fieldCard.querySelector('.delete-field-btn');
            deleteBtn.addEventListener('click', () => {
                removeField(index);
            });
            
            entityBody.appendChild(fieldCard);
        });
    }

    function renderOptions(field, fieldIndex, container) {
        container.innerHTML = '';
        
        (field.options || []).forEach((option, optIndex) => {
            const optionEl = document.getElementById('optionTemplate').content.cloneNode(true);
            
            const optionInput = optionEl.querySelector('.option-input');
            optionInput.value = option;
            optionInput.addEventListener('change', (e) => {
                currentFields[fieldIndex].options[optIndex] = e.target.value;
            });
            
            const deleteBtn = optionEl.querySelector('.delete-option-btn');
            deleteBtn.addEventListener('click', () => {
                currentFields[fieldIndex].options.splice(optIndex, 1);
                renderOptions(field, fieldIndex, container);
            });
            
            container.appendChild(optionEl);
        });
    }

    function handleTypeChange(index, type) {
        currentFields[index].type = type;
        if (type === 'Drop-down' && !currentFields[index].options) {
            currentFields[index].options = [];
        }
        renderFieldsList();
    }

    function addNewField() {
        currentFields.push({
            label: `Field ${currentFields.length + 1}`,
            type: 'Text field',
            options: []
        });
        renderFieldsList();
    }

    function removeField(index) {
        if (confirm('Are you sure you want to delete this field?')) {
            currentFields.splice(index, 1);
            renderFieldsList();
        }
    }

    function saveAllFields() {
        console.log('Saving fields:', currentFields);
        // TODO: Call API to save fields
        closeEntityModal();
    }

    function closeEntityModal() {
        document.getElementById('entityModal').classList.add('hidden');
    }

    function backToList() {
        document.getElementById('entityModal').classList.add('hidden');
        document.getElementById('customFieldModal').classList.remove('hidden');
    }

    // Close modals when clicking outside
    document.getElementById('entityModal').addEventListener('click', (e) => {
        if (e.target.id === 'entityModal') {
            closeEntityModal();
        }
    });
</script>
