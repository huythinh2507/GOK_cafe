@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Extensions
@using GOKCafe.Web.Models.DTOs
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "_Layout.cshtml";
    ViewData["Title"] = Model.Name;

    // Get hero banner title and subtitle from Umbraco properties
    var heroTitle = Model.Value<string>("heroTitle");
    var heroSubtitle = Model.Value<string>("heroSubtitle");
    var heroCtaText = Model.Value<string>("heroCtaText");
    var heroCtaUrl = Model.Value<string>("heroCtaUrl");

    var featuredTitle = Model.Value<string>("featuredSectionTitle");
    var featuredSubtitle = Model.Value<string>("featuredSectionSubtitle");

    var aboutTitle = Model.Value<string>("aboutTitle");
    var aboutDescription = Model.Value<string>("aboutDescription");

    // Get data from ViewData
    var featuredProducts = ViewData["FeaturedProducts"] as List<ProductDto> ?? new List<ProductDto>();
    var categories = ViewData["Categories"] as List<CategoryDto> ?? new List<CategoryDto>();
}

<!-- Hero Section -->
@if (!string.IsNullOrEmpty(heroTitle))
{
    <section class="hero-section">
        <div class="hero-slide hero-default">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <h1 class="hero-title">@heroTitle</h1>
                @if (!string.IsNullOrEmpty(heroSubtitle))
                {
                    <p class="hero-subtitle">@heroSubtitle</p>
                }
                @if (!string.IsNullOrEmpty(heroCtaText) && !string.IsNullOrEmpty(heroCtaUrl))
                {
                    <a href="@heroCtaUrl" class="btn btn-primary btn-lg mt-3">@heroCtaText</a>
                }
            </div>
        </div>
    </section>
}

<!-- Featured Products Section -->
<section class="featured-products py-5">
    <div class="container">
        @if (!string.IsNullOrEmpty(featuredTitle))
        {
            <div class="section-header text-center mb-5">
                <h2 class="section-title">@featuredTitle</h2>
                @if (!string.IsNullOrEmpty(featuredSubtitle))
                {
                    <p class="section-subtitle text-muted">@featuredSubtitle</p>
                }
            </div>
        }

        @if (featuredProducts.Any())
        {
            <div class="row g-4">
                @foreach (var product in featuredProducts)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="product-card card h-100">
                            <div class="product-image-wrapper position-relative">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top product-image" />
                                }
                                else
                                {
                                    <div class="product-image-placeholder d-flex align-items-center justify-content-center bg-light" style="height: 250px;">
                                        <i class="fas fa-coffee fa-3x text-muted"></i>
                                    </div>
                                }
                                @if (product.DiscountPrice.HasValue && product.DiscountPrice > 0)
                                {
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-2">Sale</span>
                                }
                                @if (product.IsFeatured)
                                {
                                    <span class="badge bg-warning position-absolute top-0 start-0 m-2">Featured</span>
                                }
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/@product.Slug" class="text-decoration-none text-dark">@product.Name</a>
                                </h5>

                                @if (!string.IsNullOrEmpty(product.ShortDescription))
                                {
                                    <p class="card-text text-muted small">@product.ShortDescription</p>
                                }

                                <div class="product-price mb-3">
                                    @if (product.DiscountPrice.HasValue && product.DiscountPrice > 0)
                                    {
                                        <span class="text-decoration-line-through text-muted me-2">$@product.Price.ToString("F2")</span>
                                        <span class="text-danger fw-bold">$@product.DiscountPrice.Value.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">$@product.Price.ToString("F2")</span>
                                    }
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="/@product.Slug" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="/products" class="btn btn-secondary btn-lg">View All Products</a>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> No featured products available. Please add products in Umbraco and mark them as featured.
            </div>
        }
    </div>
</section>

<!-- Categories Section -->
@if (categories.Any())
{
    <section class="categories-section py-5 bg-light">
        <div class="container">
            <div class="section-header text-center mb-5">
                <h2 class="section-title">Browse by Category</h2>
                <p class="section-subtitle text-muted">Discover our wide range of products</p>
            </div>

            <div class="row g-4">
                @foreach (var category in categories)
                {
                    <div class="col-md-4 col-sm-6">
                        <a href="/products?category=@category.Id" class="text-decoration-none">
                            <div class="category-card card h-100 text-center">
                                <div class="card-body">
                                    <div class="category-image-wrapper mb-3">
                                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                                        {
                                            <img src="@category.ImageUrl" alt="@category.Name" class="img-fluid rounded" style="max-height: 150px;" />
                                        }
                                        else
                                        {
                                            <div class="category-image-placeholder d-flex align-items-center justify-content-center bg-white rounded" style="height: 150px;">
                                                <i class="fas fa-th-large fa-3x text-muted"></i>
                                            </div>
                                        }
                                    </div>
                                    <h3 class="category-name h5 text-dark">@category.Name</h3>
                                    @if (!string.IsNullOrEmpty(category.Description))
                                    {
                                        <p class="category-description text-muted small">@category.Description</p>
                                    }
                                    <span class="category-count badge bg-primary">@category.ProductCount Products</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- About Section -->
@if (!string.IsNullOrEmpty(aboutTitle))
{
    <section class="about-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <h2 class="about-title">@aboutTitle</h2>
                    @if (!string.IsNullOrEmpty(aboutDescription))
                    {
                        <div class="about-description">
                            @Html.Raw(aboutDescription)
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
}

