@using GOKCafe.Web.Models.ViewModels
@model HomepageViewModel
@{
    Layout = "~/Views/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    @if (Model.HeroBanners.Any())
    {
        <div class="hero-slider">
            @foreach (var banner in Model.HeroBanners)
            {
                <div class="hero-slide @(string.IsNullOrEmpty(banner.ImageUrl) ? "hero-default" : "")"
                     style="@(!string.IsNullOrEmpty(banner.ImageUrl) ? $"background-image: url('{banner.ImageUrl}');" : "")">
                    <div class="hero-overlay"></div>
                    <div class="hero-content">
                        <h1 class="hero-title">@banner.Title</h1>
                        <p class="hero-subtitle">@banner.Subtitle</p>
                        @if (!string.IsNullOrEmpty(banner.CtaText))
                        {
                            <a href="@banner.CtaUrl" class="btn btn-primary btn-lg mt-3">
                                @banner.CtaText
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="hero-slide hero-default">
            <div class="hero-overlay"></div>
            <div class="hero-content">
                <h1 class="hero-title">Welcome to GOK Cafe</h1>
                <p class="hero-subtitle">Experience Premium Coffee & Delicious Pastries</p>
                <a href="/products" class="btn btn-primary btn-lg mt-3">Explore Menu</a>
            </div>
        </div>
    }
</section>

<!-- Featured Products Section -->
<section class="featured-products py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">@Model.FeaturedSectionTitle</h2>
            @if (!string.IsNullOrEmpty(Model.FeaturedSectionSubtitle))
            {
                <p class="section-subtitle text-muted">@Model.FeaturedSectionSubtitle</p>
            }
        </div>

        @if (Model.FeaturedProducts.Any())
        {
            <div class="product-grid">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="product-card">
                        <div class="product-image-wrapper">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" alt="@product.Name" class="product-image" />
                            }
                            else
                            {
                                <div class="product-image-placeholder">
                                    <i class="fas fa-coffee fa-3x"></i>
                                </div>
                            }
                            @if (product.DiscountPrice.HasValue && product.DiscountPrice > 0)
                            {
                                <span class="badge badge-sale">Sale</span>
                            }
                            @if (product.IsFeatured)
                            {
                                <span class="badge badge-featured">Featured</span>
                            }
                        </div>

                        <div class="product-info">
                            <h3 class="product-name">
                                <a href="/products/@product.Slug">@product.Name</a>
                            </h3>

                            @if (!string.IsNullOrEmpty(product.ShortDescription))
                            {
                                <p class="product-description">@product.ShortDescription</p>
                            }

                            <div class="product-price">
                                @if (product.DiscountPrice.HasValue && product.DiscountPrice > 0)
                                {
                                    <span class="price-original">$@product.Price.ToString("F2")</span>
                                    <span class="price-discount">$@product.DiscountPrice.Value.ToString("F2")</span>
                                }
                                else
                                {
                                    <span class="price">$@product.Price.ToString("F2")</span>
                                }
                            </div>

                            <div class="product-actions mt-3">
                                <a href="/products/@product.Slug" class="btn btn-outline-primary btn-sm">
                                    View Details
                                </a>
                                <button class="btn btn-primary btn-sm" onclick="addToCart('@product.Id')">
                                    <i class="fas fa-cart-plus"></i> Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mt-5">
                <a href="/products" class="btn btn-secondary btn-lg">View All Products</a>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i> No featured products available at the moment.
            </div>
        }
    </div>
</section>

<!-- Categories Section -->
@if (Model.Categories.Any())
{
    <section class="categories-section py-5 bg-light">
        <div class="container">
            <div class="section-header text-center mb-5">
                <h2 class="section-title">Browse by Category</h2>
                <p class="section-subtitle text-muted">Discover our wide range of products</p>
            </div>

            <div class="category-grid">
                @foreach (var category in Model.Categories)
                {
                    <a href="/products?category=@category.Id" class="category-card">
                        <div class="category-image-wrapper">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                            {
                                <img src="@category.ImageUrl" alt="@category.Name" class="category-image" />
                            }
                            else
                            {
                                <div class="category-image-placeholder">
                                    <i class="fas fa-th-large fa-3x"></i>
                                </div>
                            }
                        </div>
                        <h3 class="category-name">@category.Name</h3>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="category-description">@category.Description</p>
                        }
                        <span class="category-count">@category.ProductCount Products</span>
                    </a>
                }
            </div>
        </div>
    </section>
}

<!-- About Section -->
@if (!string.IsNullOrEmpty(Model.AboutTitle))
{
    <section class="about-section py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <h2 class="about-title">@Model.AboutTitle</h2>
                    @if (Model.AboutDescription != null)
                    {
                        <div class="about-description">
                            @Html.Raw(Model.AboutDescription)
                        </div>
                    }
                </div>
                @if (!string.IsNullOrEmpty(Model.AboutImageUrl))
                {
                    <div class="col-md-6">
                        <img src="@Model.AboutImageUrl" alt="@Model.AboutTitle" class="about-image img-fluid rounded shadow" />
                    </div>
                }
            </div>
        </div>
    </section>
}

@section Scripts {
    <script>
        function addToCart(productId) {
            // TODO: Implement add to cart functionality
            console.log('Add to cart:', productId);

            // Show notification
            alert('Product added to cart!');

            // Update cart count (placeholder)
            const cartCount = document.querySelector('.cart-count');
            if (cartCount) {
                const currentCount = parseInt(cartCount.textContent) || 0;
                cartCount.textContent = currentCount + 1;
            }
        }
    </script>
}
