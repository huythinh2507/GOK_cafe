@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "_Layout.cshtml";
}

@* Breadcrumbs *@
@await Html.PartialAsync("~/Views/Partials/Shared/_Breadcrumbs.cshtml", Model)

<!-- Contact Us Hero Section -->
<section class="bg-white py-8">
    <div class="containe bg-cream-50 mx-auto py-8 px-4">
        <div class="text-center mb-12">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">GET IN TOUCH!</h1>
            <p class="text-lg text-gray-600">
                Ask A Question, Send Us Your Feedback, Or Drop A Message By Filling Up This Form
            </p>
        </div>

        <!-- Contact Form -->
        <div class="max-w-2xl mx-auto">
            <form id="contactForm" class="space-y-6">
                <!-- Email -->
                <div>
                    <label class="block text-gray-900 font-semibold mb-2">Email</label>
                    <input type="email"
                           name="email"
                           required
                           class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-gray-500 transition-colors">
                </div>

                <!-- Subject -->
                <div>
                    <label class="block text-gray-900 font-semibold mb-2">Subject</label>
                    <input type="text"
                           name="subject"
                           required
                           class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-gray-500 transition-colors">
                </div>

                <!-- Order Number -->
                <div>
                    <label class="block text-gray-900 font-semibold mb-2">Order Number (If any)</label>
                    <input type="text"
                           name="orderNumber"
                           class="w-full px-4 py-3 border border-gray-300  focus:outline-none focus:border-gray-500 transition-colors">
                </div>

                <!-- Category Dropdown -->
                <div>
                    <label class="block text-gray-900 font-semibold mb-2">Category</label>
                    <select name="category"
                            required
                            class="w-full px-4 py-3 border border-gray-300  focus:outline-none focus:border-gray-500 transition-colors appearance-none">
                        <option value="">Select a category</option>
                        <option value="general">General Inquiry</option>
                        <option value="order">Order Issue</option>
                        <option value="feedback">Feedback</option>
                        <option value="wholesale">Wholesale</option>
                        <option value="other">Other</option>
                    </select>
                </div>

                <!-- Description -->
                <div>
                    <label class="block text-gray-900 font-semibold mb-2">Description</label>
                    <textarea name="description"
                              rows="6"
                              required
                              class="w-full px-4 py-3 border border-gray-300  focus:outline-none focus:border-gray-500 transition-colors resize-none"></textarea>
                </div>

                <!-- Registered Phone Number -->
                <div>
                    <label class="block text-gray-900 font-semibold mb-2">Registered Phone Number</label>
                    <input type="tel"
                           name="phone"
                           class="w-full px-4 py-3 border border-gray-300 focus:outline-none focus:border-gray-500 transition-colors">
                </div>

                <!-- Submit Button -->
                <div>
                    <button type="submit"
                            class="w-full text-center inline-block px-4 py-3 border-2 border-primary text-primary font-semibold hover:bg-primary hover:text-white transition-all duration-300">
                        SUBMIT
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

