@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var productImage = Model.Value<Umbraco.Cms.Core.Models.PublishedContent.IPublishedContent>("image");
    var imageUrl = productImage != null ? productImage.Url() : "";
    var title = Model.Value<string>("title") ?? Model.Name;
    var price = Model.Value<string>("price") ?? "0 VNƒê";
    var category = Model.Value<string>("category") ?? "";
    var description = Model.Value<string>("description") ?? "";
}

<!-- Product Card -->
<div class="group">
    <!-- Product Image -->
    <div class="overflow-hidden mb-4 flex items-center justify-center bg-[#E8DCC4] w-full h-[480px] relative">
        @if (!string.IsNullOrEmpty(imageUrl))
        {
            <img src="@imageUrl" alt="@title" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
        }
        else
        {
            <div class="w-full h-full bg-[#E8DCC4] flex items-center justify-center">
                <i class="fas fa-coffee text-6xl text-gray-400"></i>
            </div>
        }

        <!-- Price Overlay -->
        <div class="absolute bottom-0 left-0 bg-black/40 bg-opacity-80 text-white px-4 py-2">
            <p class="text-lg font-semibold">@price</p>
        </div>
    </div>

    <!-- Product Info -->
    <div class="mb-4">
        <!-- Category -->
        @if (!string.IsNullOrEmpty(category))
        {
            <p class="text-base text-gray-600 mb-2">@category</p>
        }

        <!-- Title -->
        <h3 class="text-lg font-bold text-gray-900 mb-1 uppercase">@title</h3>

        <!-- Description (Brand) -->
        @if (!string.IsNullOrEmpty(description))
        {
            <p class="text-lg text-gray-600">@description</p>
        }
    </div>

    <!-- Buy Now Button -->
    <button type="button" class="w-full relative flex items-center justify-center px-4 py-3 border-2 border-primary text-primary font-medium hover:bg-primary hover:text-white transition-all duration-300 group/btn">
        <span>Buy Now</span>
        <i class="fas fa-plus text-xl absolute right-4"></i>
    </button>
</div>
