@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    // Handle dynamic blog item model
    dynamic item = Model;

    string title = item.Title ?? "Blog Title";
    string date = item.Date ?? "Apr 15, 2024";
    string excerpt = item.Excerpt ?? "";
    string imageUrl = item.BackgroundImage ?? "";
    string blogUrl = item.Url ?? "#";
}

<!-- Blog Card -->
<a href="@blogUrl" class="group relative overflow-hidden cursor-pointer w-full block h-[450px]">
    <!-- Background Image with overlay -->
    <div class="absolute inset-0 bg-cover bg-center"
         style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('@imageUrl');">
        @if (string.IsNullOrEmpty(imageUrl))
        {
            <div class="w-full h-full bg-gray-400"></div>
        }
    </div>

    <!-- Content -->
    <div class="relative h-full flex flex-col justify-end p-6 text-white">
        <!-- Date Badge -->
        <div class="mb-3">
            <span class="inline-block bg-white/20 backdrop-blur-sm px-3 py-1 rounded text-xs font-medium uppercase">
                @date
            </span>
        </div>

        <!-- Title -->
        <h3 class="text-xl font-semibold mb-3 leading-snug" style="max-width: 320px;">
            @title
        </h3>

        <!-- Excerpt -->
        @if (!string.IsNullOrEmpty(excerpt))
        {
            <p class="text-sm text-white/90 mb-3 line-clamp-2" style="max-width: 320px;">
                @excerpt
            </p>
        }

        <!-- Read More Link -->
        <div class="inline-flex items-center text-white text-sm font-medium group-hover:gap-3 transition-all">
            <span>Read more</span>
            <span class="ml-2 text-xl transform group-hover:translate-x-1 transition-transform">&rarr;</span>
        </div>
    </div>
</a>
