@model List<GOKCafe.Web.Models.DTOs.ProductDto>

@if (Model != null && Model.Any())
{
    <!-- You May Also Like Section -->
    <section class="bg-white pt-8">
        <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Section Title -->
            <div class="mb-8">
                <h2 class="text-3xl font-semibold text-gray-900 uppercase tracking-wide">YOU MAY ALSO LIKE</h2>
            </div>

            <!-- Products Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
                @foreach (var product in Model.Take(4))
                {
                    var productPrice = product.Price.ToString("N0", new System.Globalization.CultureInfo("vi-VN")).Replace(",", ".");

                    <div class="group">
                        <!-- Product Image -->
                        <a href="/@product.Slug" class="overflow-hidden mb-4 flex items-center justify-center bg-gray-100" style="height: 513px;">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl"
                                     alt="@product.Name"
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                            }
                            else
                            {
                                <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                                    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            }
                        </a>

                        <!-- Product Info -->
                        <div class="text-center w-full">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                <a href="/@product.Slug" class="hover:text-primary transition-colors">
                                    @product.Name
                                </a>
                            </h3>
                            <p class="text-gray-600">From <span class="font-semibold">@productPrice VND</span></p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
