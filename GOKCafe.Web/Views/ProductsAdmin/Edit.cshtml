@model GOKCafe.Application.DTOs.Product.ProductDto
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-edit-product-page">
    <!-- Header -->
    <div class="admin-header mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Edit Product</h1>
                <p class="text-gray-600 mt-1">Update product information for: <strong>@Model.Name</strong></p>
            </div>
            <a href="/admin/products" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                <i class="fas fa-arrow-left mr-2"></i>Back to Products
            </a>
        </div>
    </div>

    <!-- Product Form -->
    <form id="editProductForm" data-product-id="@Model.Id" class="space-y-6">
        <input type="hidden" id="productId" value="@Model.Id">

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Basic Info Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Basic Information</h2>

                    <div class="space-y-4">
                        <!-- Product Name -->
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                                Product Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text"
                                   id="name"
                                   name="name"
                                   required
                                   maxlength="100"
                                   value="@Model.Name"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>

                        <!-- Description -->
                        <div>
                            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                                Description <span class="text-red-500">*</span>
                            </label>
                            <textarea id="description"
                                      name="description"
                                      rows="4"
                                      required
                                      maxlength="500"
                                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">@Model.Description</textarea>
                        </div>

                        <!-- Short Description -->
                        <div>
                            <label for="shortDescription" class="block text-sm font-medium text-gray-700 mb-2">
                                Short Description
                            </label>
                            <input type="text"
                                   id="shortDescription"
                                   name="shortDescription"
                                   value="@Model.ShortDescription"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>
                    </div>
                </div>

                <!-- Pricing & Inventory Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Pricing & Inventory</h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Price -->
                        <div>
                            <label for="price" class="block text-sm font-medium text-gray-700 mb-2">
                                Price (VND) <span class="text-red-500">*</span>
                            </label>
                            <input type="number"
                                   id="price"
                                   name="price"
                                   required
                                   min="0"
                                   step="1000"
                                   value="@Model.Price"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>

                        <!-- Discount Price -->
                        <div>
                            <label for="discountPrice" class="block text-sm font-medium text-gray-700 mb-2">
                                Discount Price (VND)
                            </label>
                            <input type="number"
                                   id="discountPrice"
                                   name="discountPrice"
                                   min="0"
                                   step="1000"
                                   value="@Model.DiscountPrice"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>

                        <!-- Stock Quantity -->
                        <div>
                            <label for="stockQuantity" class="block text-sm font-medium text-gray-700 mb-2">
                                Stock Quantity <span class="text-red-500">*</span>
                            </label>
                            <input type="number"
                                   id="stockQuantity"
                                   name="stockQuantity"
                                   required
                                   min="0"
                                   value="@Model.StockQuantity"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                        </div>

                        <!-- Active Status -->
                        <div>
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="checkbox"
                                       id="isActive"
                                       name="isActive"
                                       @(Model.IsActive ? "checked" : "")
                                       class="w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary">
                                <span class="text-sm font-medium text-gray-700">Product Active</span>
                            </label>
                            <p class="text-xs text-gray-500 mt-1">Make this product visible in the store</p>
                        </div>
                    </div>
                </div>

                <!-- Product Options Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Product Options</h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Available Sizes -->
                        <div>
                            <label for="availableSizes" class="block text-sm font-medium text-gray-700 mb-2">
                                Available Sizes (comma-separated)
                            </label>
                            <input type="text"
                                   id="availableSizes"
                                   name="availableSizes"
                                   value="@(Model.AvailableSizes != null ? string.Join(", ", Model.AvailableSizes) : "")"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                   placeholder="200g, 340g, 500g, 1kg">
                            <p class="text-xs text-gray-500 mt-1">Separate multiple sizes with commas</p>
                        </div>

                        <!-- Available Grinds -->
                        <div>
                            <label for="availableGrinds" class="block text-sm font-medium text-gray-700 mb-2">
                                Available Grinds (comma-separated)
                            </label>
                            <input type="text"
                                   id="availableGrinds"
                                   name="availableGrinds"
                                   value="@(Model.AvailableGrinds != null ? string.Join(", ", Model.AvailableGrinds) : "")"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                   placeholder="Whole Bean, Espresso, Filter, French Press">
                            <p class="text-xs text-gray-500 mt-1">Separate multiple grinds with commas</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Category & Status Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Category & Status</h2>

                    <div class="space-y-4">
                        <!-- Category -->
                        <div>
                            <label for="categoryId" class="block text-sm font-medium text-gray-700 mb-2">
                                Category <span class="text-red-500">*</span>
                            </label>
                            <select id="categoryId"
                                    name="categoryId"
                                    required
                                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
                                <option value="">Select a category</option>
                                @foreach (dynamic category in ViewBag.Categories)
                                {
                                    if (category.Id == Model.CategoryId)
                                    {
                                        <option value="@category.Id" selected>@category.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@category.Id">@category.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <!-- Is Featured -->
                        <div>
                            <label class="flex items-center space-x-2 cursor-pointer">
                                <input type="checkbox"
                                       id="isFeatured"
                                       name="isFeatured"
                                       @(Model.IsFeatured ? "checked" : "")
                                       class="w-4 h-4 text-primary border-gray-300 rounded focus:ring-primary">
                                <span class="text-sm font-medium text-gray-700">Featured Product</span>
                            </label>
                            <p class="text-xs text-gray-500 mt-1">Display this product on the homepage</p>
                        </div>
                    </div>
                </div>

                <!-- Image Upload Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Product Images</h2>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Upload Photos
                        </label>
                        <p class="text-xs text-gray-500 mb-3">Your image will be saved securely.</p>

                        <!-- Upload Area -->
                        <div id="uploadArea"
                             class="border-2 border-dashed border-primary rounded-lg p-6 text-center cursor-pointer hover:bg-gray-50 transition"
                             ondrop="handleDrop(event)"
                             ondragover="handleDragOver(event)"
                             ondragleave="handleDragLeave(event)"
                             onclick="document.getElementById('imageFileInput').click()">
                            <div class="flex flex-col items-center">
                                <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center mb-3">
                                    <i class="fas fa-cloud-upload-alt text-xl text-white"></i>
                                </div>
                                <p class="text-sm mb-1">
                                    <span class="text-primary font-medium">Upload image</span>
                                </p>
                                <p class="text-xs text-gray-500 mb-2">Drag and drop files here or click to upload</p>
                                <p class="text-xs text-gray-400">Supported formats: .png, .jpeg, .pdf</p>
                            </div>
                        </div>

                        <!-- Hidden File Input -->
                        <input type="file"
                               id="imageFileInput"
                               name="imageFiles"
                               accept="image/*"
                               multiple
                               class="hidden"
                               onchange="handleFileSelect(event)">

                        <!-- Hidden URL Input (will store the main image URL) -->
                        <input type="hidden" id="imageUrl" name="imageUrl" value="@Model.ImageUrl">

                        <!-- Uploaded Images List -->
                        <div id="uploadedImagesList" class="mt-4 space-y-2">
                            <!-- Images will be added here dynamically -->
                        </div>

                        <!-- Main Image Preview -->
                        <div id="mainImagePreview" class="mt-4">
                            <p class="text-sm font-medium text-gray-700 mb-2">Preview</p>
                            <div class="flex justify-center">
                                <img id="mainPreviewImg" src="@Model.ImageUrl" alt="Preview" class="w-80 h-96 object-cover rounded-lg border border-gray-300">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <button type="submit"
                            class="w-full px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition font-semibold">
                        <i class="fas fa-save mr-2"></i>Update Product
                    </button>
                    <a href="/admin/products"
                       class="block w-full text-center px-6 py-3 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition mt-3">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Include Crop Image Modal -->
@await Html.PartialAsync("~/Views/Partials/Modals/_ModalCropImage.cshtml")

@section Scripts {
    <!-- Cropper.js Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" integrity="sha512-hvNR0F/e2J7zPPfLC9auFe3/SE0yG4aJCOd/qxew74NN7eyiSKjr7xJJMu1Jy2wf7FXITpWS1E/RY8yzuXN7VA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js" integrity="sha512-9KkIqdfN7ipEW6B6k+Aq20PV31bjODg4AA52W+tYtAE0jE0kMx49bjJ3FgvS56wzmyfMUHbQ4Km2b7l9+Y/+Eg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <!-- Modal Crop Image Script -->
    <script src="~/js/modals/modal-crop-image.js?v=@DateTime.Now.Ticks"></script>

    <!-- Product Form Script -->
    <script src="~/js/admin/product-form.js?v=@DateTime.Now.Ticks"></script>

    <script>
        // Image Upload Functions for Edit Page
        let uploadedImages = []; // Store all uploaded images

        function handleFileSelect(event) {
            const files = event.target.files;
            if (files.length > 0) {
                Array.from(files).forEach(file => openCropModalForFile(file));
            }
        }

        // Open crop modal for each file
        function openCropModalForFile(file) {
            // Validate file type
            if (!file.type.startsWith('image/')) {
                alert('Please upload an image file');
                return;
            }

            // Validate file size (15MB max)
            const maxSize = 15 * 1024 * 1024;
            if (file.size > maxSize) {
                alert('File size must be less than 15MB');
                return;
            }

            // Read file and open crop modal
            const reader = new FileReader();
            reader.onload = function(e) {
                openCropModal(file, e.target.result);
            };
            reader.readAsDataURL(file);
        }

        function handleDragOver(event) {
            event.preventDefault();
            event.stopPropagation();
            event.currentTarget.classList.add('bg-gray-100', 'border-primary-dark');
        }

        function handleDragLeave(event) {
            event.preventDefault();
            event.stopPropagation();
            event.currentTarget.classList.remove('bg-gray-100', 'border-primary-dark');
        }

        function handleDrop(event) {
            event.preventDefault();
            event.stopPropagation();
            event.currentTarget.classList.remove('bg-gray-100', 'border-primary-dark');

            const files = event.dataTransfer.files;
            if (files.length > 0) {
                Array.from(files).forEach(file => openCropModalForFile(file));
            }
        }

        // Process file after cropping (called from modal-crop-image.js)
        function processFile(file) {
            // Check if file has attached dataUrl (from crop modal)
            let dataUrl = file.dataUrl;

            if (!dataUrl) {
                // If no dataUrl attached, read the file (fallback for direct upload)
                const reader = new FileReader();
                reader.onload = function(e) {
                    addImageToUploadList(file, e.target.result);
                };
                reader.readAsDataURL(file);
            } else {
                // Use the provided dataUrl (from crop modal)
                addImageToUploadList(file, dataUrl);
            }
        }

        // Add image to upload list
        function addImageToUploadList(file, dataUrl) {
            const imageData = {
                id: Date.now() + Math.random(), // Unique ID
                name: file.name,
                size: file.size,
                dataUrl: dataUrl,
                isDefault: uploadedImages.length === 0 // First image is default
            };

            uploadedImages.push(imageData);
            addImageToList(imageData);

            // Set first image as main image and update hidden input
            if (imageData.isDefault) {
                showMainPreview(imageData);
                document.getElementById('imageUrl').value = imageData.dataUrl;
            }
        }

        function addImageToList(imageData) {
            const listContainer = document.getElementById('uploadedImagesList');

            const imageItem = document.createElement('div');
            imageItem.id = `image-${imageData.id}`;
            imageItem.className = 'flex items-center gap-3 p-3 border-2 rounded-lg hover:bg-gray-50 cursor-pointer transition';

            // Set border color based on whether it's default
            if (imageData.isDefault) {
                imageItem.classList.add('border-primary', 'bg-blue-50');
            } else {
                imageItem.classList.add('border-gray-200');
            }

            // Click on the container sets as default
            imageItem.onclick = () => setDefaultImage(imageData.id);

            imageItem.innerHTML = `
                <div class="w-10 h-10 flex-shrink-0">
                    <img src="${imageData.dataUrl}" alt="${imageData.name}" class="w-full h-full object-cover rounded">
                </div>
                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1">
                        <p class="text-sm font-medium text-gray-700 truncate">${imageData.name}</p>
                        ${imageData.isDefault ? '<span class="px-2 py-0.5 bg-primary text-white text-xs rounded-full">Default</span>' : ''}
                    </div>
                    <p class="text-xs text-gray-500">${formatFileSize(imageData.size)}</p>
                </div>
                <div class="flex items-center gap-1">
                    <button type="button"
                            onclick="showMainPreview(${JSON.stringify(imageData).replace(/"/g, '&quot;')}); event.stopPropagation();"
                            class="p-2 text-gray-500 hover:text-primary transition"
                            title="Preview image">
                        <i class="fas fa-eye text-sm"></i>
                    </button>
                    <button type="button"
                            onclick="downloadImage('${imageData.dataUrl}', '${imageData.name}'); event.stopPropagation();"
                            class="p-2 text-gray-500 hover:text-primary transition"
                            title="Download image">
                        <i class="fas fa-download text-sm"></i>
                    </button>
                    <button type="button"
                            onclick="removeImageFromList(${imageData.id}); event.stopPropagation();"
                            class="p-2 text-gray-500 hover:text-red-500 transition"
                            title="Remove image">
                        <i class="fas fa-times text-sm"></i>
                    </button>
                </div>
            `;

            listContainer.appendChild(imageItem);
        }

        function setDefaultImage(imageId) {
            uploadedImages.forEach(img => {
                img.isDefault = (img.id === imageId);
            });

            const listContainer = document.getElementById('uploadedImagesList');
            listContainer.innerHTML = '';
            uploadedImages.forEach(img => addImageToList(img));

            const defaultImage = uploadedImages.find(img => img.isDefault);
            if (defaultImage) {
                showMainPreview(defaultImage);
                document.getElementById('imageUrl').value = defaultImage.dataUrl;
            }
        }

        function showMainPreview(imageData) {
            const mainPreview = document.getElementById('mainImagePreview');
            const mainPreviewImg = document.getElementById('mainPreviewImg');

            mainPreview.classList.remove('hidden');
            mainPreviewImg.src = imageData.dataUrl;

            document.getElementById('imageUrl').value = imageData.dataUrl;
        }

        function removeImageFromList(imageId) {
            const removingDefault = uploadedImages.find(img => img.id === imageId)?.isDefault;
            uploadedImages = uploadedImages.filter(img => img.id !== imageId);

            const imageItem = document.getElementById(`image-${imageId}`);
            if (imageItem) {
                imageItem.remove();
            }

            if (removingDefault && uploadedImages.length > 0) {
                uploadedImages[0].isDefault = true;
                const listContainer = document.getElementById('uploadedImagesList');
                listContainer.innerHTML = '';
                uploadedImages.forEach(img => addImageToList(img));

                showMainPreview(uploadedImages[0]);
                document.getElementById('imageUrl').value = uploadedImages[0].dataUrl;
            } else if (uploadedImages.length === 0) {
                const mainPreview = document.getElementById('mainImagePreview');
                mainPreview.classList.add('hidden');
                document.getElementById('imageUrl').value = '';
            }
        }

        function downloadImage(dataUrl, filename) {
            const link = document.createElement('a');
            link.href = dataUrl;
            link.download = filename;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }
    </script>
}
