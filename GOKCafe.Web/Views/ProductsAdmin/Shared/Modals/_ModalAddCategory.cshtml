@*
    Add Category Modal
    Shared modal for adding new categories

    Used by both Create and Edit product pages
    Requires JavaScript functions:
    - openAddCategoryModal()
    - closeAddCategoryModal()
*@

<!-- Add Category Modal -->
<div id="addCategoryModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-xl p-6 w-full max-w-md">
        <h3 class="text-xl font-semibold text-gray-800 mb-4">Add New Category</h3>
        <form id="addCategoryForm" class="space-y-4">
            <div>
                <label for="newCategoryName" class="block text-sm font-medium text-gray-700 mb-2">
                    Name <span class="text-red-500">*</span>
                </label>
                <input type="text" id="newCategoryName" placeholder="e.g., Beverages, Snacks, Merchandise"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
            </div>
            <div class="flex gap-3 pt-4">
                <button type="button" onclick="closeAddCategoryModal()"
                    class="flex-1 px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300">
                    Cancel
                </button>
                <button type="submit"
                    class="flex-1 px-4 py-2 bg-primary text-white rounded-lg hover:bg-green-700 focus:ring-2 focus:ring-green-500">
                    <i class="fas fa-plus mr-2"></i>Create
                </button>
            </div>
        </form>
    </div>
</div>
