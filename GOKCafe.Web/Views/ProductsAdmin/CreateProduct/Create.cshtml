@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <!-- Cropper.js CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" />
}

<div class="admin-create-product-page">
    <!-- Header -->
    <div class="admin-header mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-800">Create New Product</h1>
                <p class="text-gray-600 mt-1">Add a new product (coffee, clothes) to your catalog</p>
            </div>
            <a href="/admin/products"
                class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                <i class="fas fa-arrow-left mr-2"></i>Back to Products
            </a>
        </div>
    </div>

    <!-- Product Form -->
    <form id="createProductForm" class="space-y-6">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Basic Info Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Basic Information</h2>


                    <div class="space-y-4">
                        <!-- SKU -->
                        <div>
                            <label for="sku" class="block text-sm font-medium text-gray-700 mb-2">
                                SKU
                            </label>
                            <input type="text" id="sku" name="sku"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="COFFEE-001">
                        </div>
                        <!-- Product Name -->
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                                Product Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text" id="name" name="name" required maxlength="100"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="e.g., Ethiopian Yirgacheffe">
                        </div>


                        <!-- Description -->
                        <div>
                            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                                Description <span class="text-red-500">*</span>
                            </label>
                            <textarea id="description" name="description" rows="3" required maxlength="500"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="Describe the product's characteristics, flavor notes, origin..."></textarea>
                        </div>

                        <!-- Short Description -->
                        @* <div>
                            <label for="shortDescription" class="block text-sm font-medium text-gray-700 mb-2">
                                Short Description
                            </label>
                            <input type="text"
                                   id="shortDescription"
                                   name="shortDescription"
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                   placeholder="Brief one-liner description">
                        </div> *@
                    </div>
                </div>

                <!-- Pricing & Inventory Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Pricing & Inventory</h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <!-- Price -->
                        <div>
                            <label for="price" class="block text-sm font-medium text-gray-700 mb-2">
                                Price (VND) <span class="text-red-500">*</span>
                            </label>
                            <input type="number" id="price" name="price" required min="0.01" step="any"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
                                placeholder="150000">
                        </div>


                    </div>
                </div>

                <!-- Product Options Card (Shared Component) -->
                @await Html.PartialAsync("~/Views/ProductsAdmin/Shared/_ProductOptions.cshtml")
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Category & Status Card (Shared Component) -->
                @await Html.PartialAsync("~/Views/ProductsAdmin/Shared/_CategoryStatus.cshtml")

                <!-- Image Upload Card -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Product Images</h2>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Upload Photos
                        </label>
                        <p class="text-xs text-gray-500 mb-3">Your image will be saved securely.</p>

                        <!-- Upload Area -->
                        <div id="uploadArea"
                            class="border-2 border-dashed border-primary rounded-lg p-6 text-center cursor-pointer hover:bg-gray-50 transition"
                            ondrop="handleDrop(event)" ondragover="handleDragOver(event)"
                            ondragleave="handleDragLeave(event)"
                            onclick="document.getElementById('imageFileInput').click()">
                            <div class="flex flex-col items-center">
                                <div class="w-12 h-12 bg-primary rounded-full flex items-center justify-center mb-3">
                                    <i class="fas fa-cloud-upload-alt text-xl text-white"></i>
                                </div>
                                <p class="text-sm mb-1">
                                    <span class="text-primary font-medium">Upload image</span>
                                </p>
                                <p class="text-xs text-gray-500 mb-2">Drag and drop files here or click to upload</p>
                                <p class="text-xs text-gray-400">Supported formats: .png, .jpeg, .pdf</p>
                            </div>
                        </div>

                        <!-- Hidden File Input - Allow multiple files -->
                        <input type="file" id="imageFileInput" name="imageFiles" accept="image/*" multiple
                            class="hidden" onchange="handleFileSelect(event)">

                        <!-- Hidden URL Input (will store the main image URL) -->
                        <input type="hidden" id="imageUrl" name="imageUrl">

                        <!-- Uploaded Images List -->
                        <div id="uploadedImagesList" class="mt-4 space-y-2">
                            <!-- Images will be added here dynamically -->
                        </div>

                        <!-- Main Image Preview -->
                        <div id="mainImagePreview" class="hidden mt-4">
                            <p class="text-sm font-medium text-gray-700 mb-2">Preview</p>
                            <div class="flex justify-center">
                                <img id="mainPreviewImg" src="" alt="Preview"
                                    class="w-80 h-96 object-cover rounded-lg border border-gray-300">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <button type="submit"
                        class="w-full px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary-dark transition font-semibold">
                        <i class="fas fa-save mr-2"></i>Create Product
                    </button>
                    <a href="/admin/products"
                        class="block w-full text-center px-6 py-3 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition mt-3">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Crop Image Modal -->
@await Html.PartialAsync("~/Views/Partials/Modals/_ModalCropImage.cshtml")

@section Scripts {
    <!-- Cropper.js Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>

    <!-- Crop Image Modal Script -->
    <script src="~/js/modals/modal-crop-image.js"></script>

    <!-- Configure API base URL BEFORE loading any scripts that need it -->
    <script>
        // Points to GOKCafe.API (separate application on port 7045)
        window.API_BASE_URL = 'https://localhost:7045';
    </script>

    <script type="module">
        // Import JavaScript modules
        import { ProductModals } from '/js/Share/Modal/product-modals.js';
        import { ProductImageUpload } from '/js/Share/UploadImage/product-image-upload.js';

        // Initialize modules
        ProductModals.init(window.API_BASE_URL);
        ProductImageUpload.init(window.API_BASE_URL);

        // Expose modal functions to global scope for inline onclick handlers
        window.openAddProductTypeModal = () => ProductModals.openAddProductTypeModal();
        window.closeAddProductTypeModal = () => ProductModals.closeAddProductTypeModal();
        window.openAddCategoryModal = () => ProductModals.openAddCategoryModal();
        window.closeAddCategoryModal = () => ProductModals.closeAddCategoryModal();
        window.openManageAttributesModal = (id) => ProductModals.openManageAttributesModal(id);
        window.closeManageAttributesModal = () => ProductModals.closeManageAttributesModal();
        window.addNewAttributeField = () => ProductModals.addNewAttributeField();
        window.saveAllAttributes = () => ProductModals.saveAllAttributes();

        // Expose image upload functions to global scope
        window.handleFileSelect = (e) => ProductImageUpload.handleFileSelect(e);
        window.handleDragOver = (e) => ProductImageUpload.handleDragOver(e);
        window.handleDragLeave = (e) => ProductImageUpload.handleDragLeave(e);
        window.handleDrop = (e) => ProductImageUpload.handleDrop(e);
        window.processFile = (f) => ProductImageUpload.processFile(f);

        // Expose ProductImageUpload module to global scope for product-form.js
        window.ProductImageUpload = ProductImageUpload;
    </script>
    <script src="~/js/admin/product-form.js?v=@DateTime.Now.Ticks"></script>
}
