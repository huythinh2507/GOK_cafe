@model GOKCafe.Application.DTOs.Product.ProductDto
@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-product-details-page">
    <!-- Header -->
    <div class="mb-6 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Product Details</h1>
            <p class="text-gray-600 mt-1">Viewing details for: <strong>@Model.Name</strong></p>
        </div>
        <div class="flex gap-3">
        
            <a href="/admin/products" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                <i class="fas fa-arrow-left mr-2"></i>Back to List
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Product Image and Basic Info -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Product Image -->
                    <div>
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" alt="@Model.Name" class=" h-[440px] object-contain rounded-lg border border-gray-200">
                        }
                        else
                        {
                            <div class="w-full h-64 bg-gray-200 rounded-lg flex items-center justify-center">
                                <i class="fas fa-image text-6xl text-gray-400"></i>
                            </div>
                        }
                    </div>

                    <!-- Basic Information -->
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">@Model.Name</h2>

                        @if (Model.IsFeatured)
                        {
                            <span class="inline-block px-3 py-1 bg-yellow-100 text-yellow-800 rounded-full text-sm font-semibold mb-3">
                                <i class="fas fa-star mr-1"></i>Featured Product
                            </span>
                        }

                        <div class="space-y-3">
                            <div>
                                <span class="text-sm font-medium text-gray-500">Category:</span>
                                <span class="ml-2">
                                    @if (!string.IsNullOrEmpty(Model.CategoryName))
                                    {
                                        <span class="px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">@Model.CategoryName</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">No category</span>
                                    }
                                </span>
                            </div>

                            <div>
                                <span class="text-sm font-medium text-gray-500">Stock Status:</span>
                                <span class="ml-2">
                                    @if (Model.StockQuantity > 0)
                                    {
                                        <span class="text-green-600 font-semibold">
                                            <i class="fas fa-check-circle"></i> In Stock (@Model.StockQuantity units)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-red-600 font-semibold">
                                            <i class="fas fa-times-circle"></i> Out of Stock
                                        </span>
                                    }
                                </span>
                            </div>

                            <div>
                                <span class="text-sm font-medium text-gray-500">Status:</span>
                                <span class="ml-2">
                                    @if (Model.IsActive)
                                    {
                                        <span class="text-green-600 font-semibold">
                                            <i class="fas fa-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-yellow-600 font-semibold">
                                            <i class="fas fa-pause-circle"></i> Inactive
                                        </span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pricing & Discount Information -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                    <i class="fas fa-tags text-primary mr-2"></i>
                    Pricing & Discount
                </h2>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Regular Price -->
                    <div class="p-4 bg-gray-50 rounded-lg">
                        <div class="text-sm text-gray-600 mb-1">Regular Price</div>
                        <div class="text-2xl font-bold text-gray-900">
                            @Model.Price.ToString("N0") VND
                        </div>
                    </div>

                    <!-- Discount Price -->
                    <div class="p-4 @(Model.DiscountPrice.HasValue ? "bg-green-50" : "bg-gray-50") rounded-lg">
                        <div class="text-sm text-gray-600 mb-1">Discount Price</div>
                        @if (Model.DiscountPrice.HasValue && Model.DiscountPrice.Value > 0)
                        {
                            <div class="text-2xl font-bold text-green-600">
                                @Model.DiscountPrice.Value.ToString("N0") VND
                            </div>
                            <div class="text-sm text-green-700 mt-1">
                                <i class="fas fa-arrow-down"></i>
                                Save @((Model.Price - Model.DiscountPrice.Value).ToString("N0")) VND
                                (@(Math.Round((Model.Price - Model.DiscountPrice.Value) / Model.Price * 100, 1))% OFF)
                            </div>
                        }
                        else
                        {
                            <div class="text-lg text-gray-500">
                                <i class="fas fa-minus"></i> No discount
                            </div>
                        }
                    </div>
                </div>

                <!-- Discount/Promotion Status -->
                @if (Model.DiscountPrice.HasValue && Model.DiscountPrice.Value > 0)
                {
                    <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
                        <div class="flex items-start">
                            <i class="fas fa-percentage text-yellow-600 text-xl mr-3 mt-1"></i>
                            <div>
                                <h3 class="font-semibold text-yellow-900">Active Promotion</h3>
                                <p class="text-sm text-yellow-800 mt-1">
                                    This product is currently on sale. Customers will see the discounted price.
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Description -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Description</h2>
                <div class="prose max-w-none">
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-gray-700 whitespace-pre-line">@Model.Description</p>
                    }
                    else
                    {
                        <p class="text-gray-400 italic">No description available</p>
                    }
                </div>

                @if (!string.IsNullOrEmpty(Model.ShortDescription))
                {
                    <div class="mt-4 p-3 bg-blue-50 rounded-lg">
                        <div class="text-sm font-medium text-blue-900 mb-1">Short Description</div>
                        <p class="text-blue-800">@Model.ShortDescription</p>
                    </div>
                }
            </div>

            <!-- Product Options -->
            @if ((Model.AvailableSizes != null && Model.AvailableSizes.Any()) ||
                 (Model.AvailableGrinds != null && Model.AvailableGrinds.Any()))
            {
                <div class="bg-white rounded-lg shadow-sm p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Product Options</h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        @if (Model.AvailableSizes != null && Model.AvailableSizes.Any())
                        {
                            <div>
                                <div class="text-sm font-medium text-gray-700 mb-2">Available Sizes</div>
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var size in Model.AvailableSizes)
                                    {
                                        <span class="px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-sm">@size</span>
                                    }
                                </div>
                            </div>
                        }

                        @if (Model.AvailableGrinds != null && Model.AvailableGrinds.Any())
                        {
                            <div>
                                <div class="text-sm font-medium text-gray-700 mb-2">Available Grinds</div>
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var grind in Model.AvailableGrinds)
                                    {
                                        <span class="px-3 py-1 bg-orange-100 text-orange-800 rounded-full text-sm">@grind</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Quick Actions -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Quick Actions</h2>
                <div class="flex flex-row justify-between">
                    <a href="/admin/products/edit/@Model.Id" class="w-32 p-2 bg-primary text-white rounded-lg hover:bg-primary transition text-center">
                        <i class="fas fa-edit mr-2"></i>Edit
                    </a>
                    <button onclick="deleteProduct('@Model.Id', '@Model.Name')" class=" w-32  p-2 bg-gray-600 text-white rounded-lg hover:bg-gray-600 transition">
                        <i class="fas fa-trash mr-2"></i>Delete
                    </button>
                    <a href="/product-details?id=@Model.Id" target="_blank" class=" w-32 p-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-center">
                        <i class="fas fa-eye mr-2"></i>Web
                    </a>
                </div>
            </div>

            <!-- Product Statistics -->
            <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Product Info</h2>
                <div class="space-y-3">
                    <div class="flex justify-between items-center py-2 border-b">
                        <span class="text-sm text-gray-600">Product ID</span>
                        <span class="text-sm font-mono text-gray-900">@Model.Id.ToString().Substring(0, 8)...</span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b">
                        <span class="text-sm text-gray-600">Stock</span>
                        <span class="text-sm font-semibold @(Model.StockQuantity > 0 ? "text-green-600" : "text-red-600")">
                            @Model.StockQuantity units
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-2 border-b">
                        <span class="text-sm text-gray-600">Active Status</span>
                        <span class="text-sm font-semibold @(Model.IsActive ? "text-green-600" : "text-yellow-600")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </div>
                    <div class="flex justify-between items-center py-2">
                        <span class="text-sm text-gray-600">Featured</span>
                        <span class="text-sm font-semibold @(Model.IsFeatured ? "text-yellow-600" : "text-gray-600")">
                            @(Model.IsFeatured ? "Yes" : "No")
                        </span>
                    </div>
                </div>
            </div>

        
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Delete Product</h3>
        <p class="text-gray-600 mb-6">Are you sure you want to delete "<span id="deleteProductName"></span>"? This action cannot be undone.</p>
        <div class="flex justify-end space-x-3">
            <button onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
                Cancel
            </button>
            <button onclick="confirmDelete()" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                <i class="fas fa-trash mr-2"></i>Delete
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let productToDelete = null;

        function deleteProduct(productId, productName) {
            productToDelete = { id: productId, name: productName };
            document.getElementById('deleteProductName').textContent = productName;
            document.getElementById('deleteModal').classList.remove('hidden');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            productToDelete = null;
        }

        async function confirmDelete() {
            if (!productToDelete) return;

            try {
                const response = await fetch(`https://localhost:7045/api/v1/products/${productToDelete.id}`, {
                    method: 'DELETE'
                });

                const result = await response.json();

                if (result.success) {
                    alert(`Product "${productToDelete.name}" deleted successfully`);
                    window.location.href = '/admin/products';
                } else {
                    alert(result.message || 'Failed to delete product');
                }
            } catch (error) {
                console.error('Error deleting product:', error);
                alert('Error deleting product. Please try again.');
            }
        }
    </script>
}
