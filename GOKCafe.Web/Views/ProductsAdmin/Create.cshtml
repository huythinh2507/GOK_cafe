        async function loadExistingAttributes(productTypeId) {
            const listContent = document.getElementById('attributesListContent');
            listContent.innerHTML = '<p class="text-xs text-gray-500">Loading...</p>';

            try {
                const response = await fetch(`${window.API_BASE_URL}/api/v1/producttypes/${productTypeId}/attributes-with-values`);
                const result = await response.json();

                if (result.success && result.data.attributes && result.data.attributes.length > 0) {
