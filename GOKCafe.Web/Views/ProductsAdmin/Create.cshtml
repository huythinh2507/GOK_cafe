                    const name = document.getElementById('attributeName').value;
                    const displayName = document.getElementById('attributeDisplayName').value || name;
                    const valuesInput = document.getElementById('attributeValues').value;
                    const isRequired = document.getElementById('attributeRequired').checked;
                    const allowMultiple = document.getElementById('attributeMultiple').checked;

                    try {
                        // Create attribute
                        const attrResponse = await fetch(`${window.API_BASE_URL}/api/v1/productattributes`, {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                name: name,
                                displayName: displayName,
                                productTypeId: currentManagingProductTypeId,
                                isRequired: isRequired,
                                allowMultipleSelection: allowMultiple,
                                displayOrder: 1
                            })
                        });

                        const attrResult = await attrResponse.json();

                        if (!attrResult.success) {
                            alert('Failed to create attribute: ' + (attrResult.message || 'Unknown error'));
                            return;
                        }

                        // Add values if provided
                        if (valuesInput.trim()) {
                            const values = valuesInput.split(',').map(v => v.trim()).filter(v => v);
                            let displayOrder = 1;

                            for (const value of values) {
                                await fetch(`${window.API_BASE_URL}/api/v1/productattributevalues`, {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({
                                        productAttributeId: attrResult.data.id,
                                        value: value,
                                        displayOrder: displayOrder++
                                    })
                                });
                            }
                        }

                        // Reset form and reload
                        document.getElementById('addAttributeForm').reset();
                        await loadExistingAttributes(currentManagingProductTypeId);
                        alert(`Attribute "${name}" added successfully!`);

                    } catch (error) {
                        console.error('Error creating attribute:', error);
                        alert('Error creating attribute. Please try again.');
                    }
                });
